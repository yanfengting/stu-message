<% layout('layout') -%>
    <style>
        #search input,
        #search select {
            width: 150px;
        }

        #search label {
            width: 80px;
            text-align: right;
        }

        #search .form-group {
            margin: 5px auto;
        }
        td th{
            width: 100px;
        }
    </style>
    <div class="panel-group" id="search" role="tablist" aria-multiselectable="true">
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="title">
                <h4 class="panel-title">
                    <a role="button" data-toggle="collapse" data-parent="#search" href="#collapseSearch" aria-expanded="true" aria-controls="collapseSearch">
                        查询条件
                    </a>
                </h4>
            </div>
            <div id="collapseSearch" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="title">
                <div class="panel-body">
                    <form class="form-inline" action="/students/list">
                        <div class="form-group">
                            <label for="sno">学号：</label>
                            <input type="text" class="form-control" id="sno">
                        </div>
                        <div class="form-group">
                            <label for="name">姓名：</label>
                            <input type="text" class="form-control" id="name">
                        </div>
                        <div class="form-group">
                            <label for="sex">性别：</label>
                            <select class="form-control" id="sex">
                                <option value="男">男</option>
                                <option value="女">女</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="majorId">专业：</label>
                            <select class="form-control" id="majorId">
                                <option value="男">男</option>
                                <option value="女">女</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="classId">班级：</label>
                            <select class="form-control" id="classId">
                                <option value="男">男</option>
                                <option value="女">女</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="departId">院系：</label>
                            <select class="form-control" id="departId">
                                <option value="男">男</option>
                                <option value="女">女</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="status">状态：</label>
                            <select class="form-control" id="status">
                                <option value="0">正常</option>
                                <option value="1">删除</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="birthdayBegin">生日(起)：</label>
                            <input type="datetime" class="form-control" id="birthdayBegin">
                            <label for="birthdayEnd">生日(至)：</label>
                            <input type="datetime" class="form-control" id="birthdayEnd">
                        </div>
                        <div class="form-group">
                            <label for="card">身份证号：</label>
                            <input type="text" class="form-control" id="card">
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            搜索
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%
        function formateDate(data,flag){
            var date = new Date(data);
            var y = date.getFullYear();
            var M = date.getMonth() + 1;
            var d = date.getDate();
            var h = date.getHours();
            var m = date.getMinutes();
            var s = date.getSeconds();
        
            M = M < 10 ? '0' + M : M.toString();
            // 一个月的第几天getDate 一周的第几天getDay   
            d = d < 10 ? '0' + d : d.toString();   
            h = h < 10 ? '0' + h : h.toString();     
            m = m < 10 ? '0' + m : m.toString();   
            s = s < 10 ? '0' + s : s.toString(); 

            return flag ? `${y}-${M}-${d} ${h}-${m}-${s}`: `${y}-${M}-${d}`
        }
    %>
    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <tr>
                <th style="text-align: center;">
                    <input type="checkbox" class="selectAll" title="全选">
                </th>
                <th>学号</th>
                <th>姓名</th>
                <th>性别</th>
                <th>生日</th>
                <th>身份证号</th>
                <th>院系</th>
                <th>专业</th>
                <th>班级</th>
                <!-- <th>籍贯</th>
                <th>家庭地址</th>
                <th>QQ</th>
                <th>手机</th>
                <th>邮箱</th> -->
                <th>状态</th>
                <!-- <th>创建时间</th>
                <th>创建人</th>
                <th>修改时间</th>
                <th>修改人</th> -->
                <th style="text-align: center;">操作</th>
            </tr>

            <% for(var i = 0; i < students.length; i++){ %>
            <tr>
                <td style="text-align: center;">
                    <input type="checkbox" class="selectSingle" title="选中">
                </td>
                <td><%= students[i].sno%></td>
                <td><%= students[i].name %></td>
                <td><%= students[i].sex %></td>
                <td><%= formateDate(students[i].birthday, false) %></td>
                <td><%= students[i].card %></td>
                <td><%= students[i].departId %></td>                
                <td><%= students[i].majorId %></td>
                <td><%= students[i].classId %></td>
                <!-- <td><%= students[i].nativePlace %></td>
                <td><%= students[i].address %></td>
                <td><%= students[i].qq %></td>
                <td><%= students[i].phone %></td>
                <td><%= students[i].email %></td> -->
                <td>
                    <% if(students[i].status == 0 ){ %>
                        正常
                    <% }else{ %>
                        <span style="color: red">删除</span>
                    <% } %>
                    <!-- <%= students[i].status == 0 ? "正常": "删除" %> -->
                </td>
                <!-- <td><%= formateDate(students[i].createTime, true) %></td>
                <td><%= students[i].createUserName %></td>
                <td><%= formateDate(students[i].updateTime, true) %></td>
                <td><%= students[i].updateUserName %></td> -->

                <td style="width: 130px; text-align: center;">
                    <a class="btn btn-success btn-xs" href="/students/edit/<%=students[i].id %>" role="button">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        编辑
                    </a>
                    <a class="btn btn-danger btn-xs remove" href="javascript:void(0);"  data-id="<%=students[i].id %>" role="button">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        删除
                    </a>
                </td>
            </tr>
            <% } %>
        </table>
    </div>


